          ]
        },
        "NodegroupName": "nodegroup",
        "ScalingConfig": {
          "DesiredSize": 3,
          "MaxSize": 4,
          "MinSize": 2
        },
        "Subnets": [
          "subnet-04b3622f6700f7c21",
          "subnet-019d8df507018bfae",
          "subnet-0cfba29c7da235a2e"
        ],
        "Tags": {
          "alpha.eksctl.io/nodegroup-name": "nodegroup",
